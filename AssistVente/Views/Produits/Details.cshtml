@model AssistVente.Models.Produit

@{
    ViewBag.Title = "Details";
}
<div>
    <h4>Détails du produit @Model.Nom</h4>
    <hr />
    <dl class="row">
        <div class="col-md-6">
            <dt>
                @Html.DisplayNameFor(model => model.Nom)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Nom)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.PrixAchat)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.PrixAchat)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.PrixVente)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.PrixVente)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.ALouer)
            </dt>

            <dd>
                @if (Model.ALouer)
                {
                    @("Oui")
                }
                else
                {
                    @("Non")
                }
            </dd>
        </div>
        <div class="col-md-6">
            <dt>
                @Html.DisplayNameFor(model => model.StockDisponible)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.StockDisponible)
            </dd>


            <dt>
                @Html.DisplayNameFor(model => model.Description)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Description)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Categorie)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Categorie.Name)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.DateCreation)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DateCreation)
            </dd>

            @*<dt>
            @Html.DisplayNameFor(model => model.CreatorId)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CreatorId)
        </dd>*@
        </div>



    </dl>
</div>
<p class="pull-right">
    <a href="@Url.Action("Edit", new { id = Model.ID })" style="margin-right:5px;" class="btn btn-primary"><i class="fas fa-edit"></i> Modifier le produit</a>
    <a href="@Url.Action("Index")" style="margin-right:5px;" class="btn btn-default"><i class="fas fa-arrow-left"></i> Retour à la liste</a>
    
</p>