@model IEnumerable<AssistVente.Models.Parametre>

@{
    ViewBag.Title = "Index";
}

<p>
    @if (Model.Count() <= 0)
    {
        @Html.ActionLink("Create New", "Create")
    }

</p>


<div class="card strpied-tabled-with-hover">
    <div class="card-header ">
        <h4 class="card-title ">Configuration des paramètres</h4>
        <p class="pull-right">
            @*<a href="@Url.Action("Create")" style="margin-right:5px;" class="btn btn-primary"><span class="fa fa-power-off"></span> Initialiser</a>*@
        </p>
        @*<p class="card-category  pull-left">Creez, modifiez ou supprimez des clients</p>*@

    </div>
    <div class="card-body table-full-width table-responsive">
        @if (Model.Any())
        {
            <table class="table table-hover table-striped">
                <thead>
                <th>Email des rapports quotidiens</th>
                <th>Heure d'envoi des rapports</th>
                </thead>
                <tbody>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.EmailNotifications)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.HourNotifications)
                            </td>


                            <td>
                                @*<a href="@Url.Action("Details", new { id = item.Id })" style="margin-right:5px;" class="btn btn-primary"><span class="fas fa-list"></span></a>*@
                                <a href="@Url.Action("Edit", new { id = item.Id })" style="margin-right:5px;" class="btn btn-default"><i class="fas fa-edit"></i></a>
                                @*<a href="@Url.Action("Delete", new { id = item.ID })" class="btn btn-danger"><span class="fas fa-trash-alt"></span></a>*@

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="placeholder col-md-10">
                <span>
                    Les paramètres d'envoi ne sont pas initialisés
                </span>
                <hr />
                <h5>
                    <a href="@Url.Action("Create")" class="btn btn-default"><i class="fa fa-power-off"></i> Initialiser</a>
                </h5>
            </div>
        }

    </div>
</div>