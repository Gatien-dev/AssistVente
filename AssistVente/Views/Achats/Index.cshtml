@model IEnumerable<AssistVente.Models.Achat>


@{
    ViewBag.Title = "Index";
}


<div class="row">
    <div class="col-md-12">
        <div class="card strpied-tabled-with-hover">
            <div class="card-header ">
                <p class="pull-right">
                    <a href="@Url.Action("Create")" style="margin-right:5px;" class="btn btn-primary"><span class="fas fa-plus"></span> Nouvel Achat</a>
                </p>
                <h4 class="card-title">Achats </h4>
                <p class="card-category">Enregistrez vos Achats </p>
            </div>

            @if (Model.Count() <= 0)
            {
                <div class="placeholder col-md-10">
                    <span>
                        Aucun Achat enregistré pour l'instant
                    </span>
                    <hr />
                    <h5>
                        <a href="@Url.Action("Create")" class="btn btn-default"><i class="nc-icon nc-simple-add"></i> Nouvel Achat</a>
                    </h5>
                </div>

            }
            else
            {
                <table class="table table-hover table-striped">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.NumFacture)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Fournisseur)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Date)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Montant)
                            </th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NumFacture)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Fournisseur)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Date)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Montant)
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
</div>

