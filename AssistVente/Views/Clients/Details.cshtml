@model AssistVente.Models.Client

@{
    ViewBag.Title = "Details";
}

    <div class="card strpied-tabled-with-hover">
        <div class="card-header ">
            <h4 class="card-title ">Details du client "@Model.Nom"</h4>
            
            <p class="card-category  pull-left">Voir les informations détaillées d'un client</p>

        </div>
        <div class="card-body table-full-width table-responsive">
            <table class="table table-hover table-striped">
                <tbody>
                    <tr>
                        <td><b>NOM</b></td>
                        <td>
                            @Html.DisplayFor(model => model.Nom)
                        </td>
                    </tr>
                    <tr>
                        <td><b>PAR DEFAUT</b></td>
                        <td>
                            @Html.DisplayFor(model => model.Default)
                        </td>
                    </tr>
                    <tr>
                        <td><b>ADRESSE</b></td>
                        <td>
                            @Html.DisplayFor(model => model.Adresse)
                        </td>
                    </tr>
                    <tr>
                        <td><b>EMAIL</b></td>
                        <td>
                            @Html.DisplayFor(model => model.Email)
                        </td>
                    </tr>
                    <tr>
                        <td><b>TELEPHONE</b></td>
                        <td>
                            @Html.DisplayFor(model => model.Telephone)
                        </td>
                    </tr>
                    <tr>
                        <td><b>SOLDE</b></td>
                        <td>
                            @Html.DisplayFor(model => model.Solde)
                        </td>
                    </tr>
                </tbody>
            </table>
            <p class="pull-right">
                <a href="@Url.Action("Edit", new { id = Model.ID })" style="margin-right:5px;" class="btn btn-primary"><i class="fas fa-edit"></i> Modifier l'utilisateur</a>
                <a href="@Url.Action("Index")" style="margin-right:5px;" class="btn btn-default"><i class="fas fa-arrow-left"></i> Retour à la liste</a>
            </p>
        </div>
    </div>
