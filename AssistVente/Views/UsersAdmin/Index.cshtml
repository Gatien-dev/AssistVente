@model IEnumerable<IdentitySample.Models.ApplicationUser>

@{
    ViewBag.Title = "Index";
}




<div class="card strpied-tabled-with-hover">
    <div class="card-header ">
        <h4 class="card-title ">Liste des utilisateurs</h4>
        <p class="pull-right">
            <a href="@Url.Action("Create")" style="margin-right:5px;" class="btn btn-primary"><span class="fas fa-plus"></span> Nouvel utilisateur</a>
        </p>
        <p class="card-category  pull-left">Creez, modifiez ou supprimez des comptes utilisateurs</p>

    </div>
    <div class="card-body table-full-width table-responsive">
        <table class="table table-hover table-striped">
            <thead>
            <th>Nom</th>
            <th>Email</th>
            <th>Telephone</th>
            <th>Actions</th>

            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.UserName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PhoneNumber)
                        </td>

                        <td>
                            <a href="@Url.Action("Details", new { id = item.Id })" style="margin-right:5px;" class="btn btn-primary"><span class="fas fa-list"></span></a>
                            <a href="@Url.Action("Edit", new { id = item.Id })" style="margin-right:5px;" class="btn btn-default"><i class="fas fa-edit"></i></a>
                            <a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-danger"><span class="fas fa-trash-alt"></span></a>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>