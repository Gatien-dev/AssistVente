@model IdentitySample.Models.ApplicationUser

@{
    ViewBag.Title = "Details";
}





<div class="card strpied-tabled-with-hover">
    <div class="card-header ">
        <h4 class="card-title ">Liste des droits d'accès de l'utlisateur "@Model.UserName"</h4>
        @*<p class="pull-right">
            <a href="@Url.Action("Create")" style="margin-right:5px;" class="btn btn-primary"><span class="fas fa-plus"></span> Nouvel utilisateur</a>
        </p>*@
        <p class="card-category  pull-left">Ajoutez ou retirez des droits à l'utlilisateur</p>

    </div>
    <div class="card-body table-full-width table-responsive">
        @if (ViewBag.RoleNames.Count == 0)
        {
            <hr />
            <p>Aucun droit d'accès pour cet utilisateur.</p>
        }
        <table class="table table-hover table-striped">
            <thead>
            <th>Droit d'accès</th>
            </thead>
            <tbody>

                @foreach (var item in ViewBag.RoleNames)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item)
                        </td>


                        @*<td>
                            <a href="@Url.Action("Details", new { id = item.Id })" style="margin-right:5px;" class="btn btn-primary"><span class="fas fa-list"></span></a>

                            <a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-danger"><span class="fas fa-remove"></span></a>

                        </td>*@
                    </tr>
                }
            </tbody>
        </table>
        <p class="pull-right">
            <a href="@Url.Action("Edit", new { id = Model.Id })" style="margin-right:5px;" class="btn btn-primary"><i class="fas fa-edit"></i> Modifier l'utilisateur</a>
            <a href="@Url.Action("Index")" style="margin-right:5px;" class="btn btn-default"><i class="fas fa-arrow-left"></i> Retour à la liste</a>
            @*@Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
            @Html.ActionLink("Back to List", "Index")*@
        </p>
    </div>
</div>