@model AssistVente.Models.Caisse

@{
    ViewBag.Title = "Edit";
}




@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <h2>Réinitialisation de la caisse</h2>
    <hr />

    <div class="row">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID)
    </div>
    <div class="card strpied-tabled-with-hover">
        <div class="card-header ">
            <h4 class="card-title ">Details de la caisse "@Model.Nom"</h4>

            <p class="card-category  pull-left">Voir les informations détaillées d'une caisse</p>

        </div>
        <div class="card-body table-full-width table-responsive">
            <table class="table table-hover table-striped">
                <tbody>
                    <tr>
                        <td><b>NOM</b></td>
                        <td>
                            @Html.DisplayFor(model => model.Nom)
                        </td>
                    </tr>
                    <tr>
                        <td><b>SOLDE</b></td>
                        <td>
                            @Html.DisplayFor(model => model.Solde)
                        </td>
                    </tr>
                </tbody>
            </table>
          
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                @Html.LabelFor(model => model.Solde,"Nouveau Solde", htmlAttributes: new { @class = "control-label col-md-6" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Solde, new { htmlAttributes = new { @class = "form-control", @type = "number", @step = "1", @placeholder="0.00"} })
                    @Html.ValidationMessageFor(model => model.Solde, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-primary" value="Reinitialiser" />
            <a href="@Url.Action("Index")" style="margin-right:5px;" class="btn btn-default"><i class="fas fa-arrow-left"></i> Retour à la liste</a>
        </div>
    </div>

}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
